@model Product
<div class="row">
<div class="col-md-12">
    <div class="text-center">
        <h6 class="display6">
                @Model.ProductName
        </h6>
        <img width="300" class="img-fluid shadow rounded-3 p-5 my-3" src="@Model?.ImageUrl" alt="@Model.ProductName">
        <p class="lead text-danger">@Model.Price.ToString("c")</p>
    </div>
</div>
</div>

<div class="text-center">


<div class="btn-group">
    <a class="btn btn-outline-secondary rounded-0" asp-action="Index" asp-controller="Home">
       <i class="fa-solid fa-house"></i>
        Home</a>
    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Product">
        <i class="fa-solid fa-list"></i>
        Products</a>

        <form id="@Model.ProductId" asp-page="/cart" method="post">
        <input type="hidden" asp-for="ProductId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
        <button type="submit" class="btn btn-outline-secondary rounded-0">
            <i class="fa fa-cart-plus"></i>
            Add To Cart
        </button>
        </form>
</div>

    
</div>

@section Header{
    <div>
        Header for only Get
    </div>
}