@model ProductDtoForUpdate
<div class="text-center">
  <div class="display-6">Update</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">
  <div class="text-danger" asp-validation-summary="All"></div>

  <input asp-for="ProductId" type="hidden" />

  <div class="form-group my-3">
    <label asp-for="CategoryId"></label>
    <select
      class="form-control"
      asp-items="@ViewBag.Categories"
      asp-for="CategoryId"
    ></select>
  </div>

  <div class="form-group my-3">
    <label asp-for="ProductName"></label>
    <input asp-for="ProductName" class="form-control" />
  </div>
  <div class="form-group my-3">
    <label asp-for="Summary"></label>
    <input asp-for="Summary" class="form-control" />
  </div>
  <div class="form-group my-3">
    <label asp-for="Price"></label>
    <input asp-for="Price" class="form-control" />
  </div>

  <div class="form-group my-3">
    <img class="rounded shadow" src="@Model?.ImageUrl" width="150" height="150">
  </div>

<div class="form-group my-3">
    <label asp-for="ImageUrl"></label>
    <input name="file" type="file" class="form-control" />
  </div>

  <div class="form-group my-3">
    <div class="btn-group">
      <button class="btn btn-primary" type="submit">
        <i class="fa fa-save"></i>
        Update
      </button>

      <button class="btn btn-light" type="button">
        <a
          style="color: black; text-decoration: none"
          asp-controller="Product"
          asp-action="Index"
        >
          <i class="fa fa-list"></i>
          Products
        </a>
      </button>
    </div>
  </div>
</form>

