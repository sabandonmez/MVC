@model Product
<div class="row">
<div class="col-md-12">
    <div class="text-center">
        <h6 class="display6">
                @Model.ProductName
        </h6>
        <img width="300" class="img-fluid shadow rounded-3 my-3" src="@Model?.ImageUrl" alt="@Model.ProductName">
        <p class="lead text-danger">@Model.Price.ToString("c")</p>
    </div>
</div>
</div>

<div class="btn-group">
    <a class="btn btn-primary" asp-action="Index" asp-controller="Home">
       <i class="fa-solid fa-house"></i>
        Home</a>
    <a class="btn btn-outline-primary" asp-action="Index" asp-controller="Product">
        <i class="fa-solid fa-list"></i>
        Products</a>
</div>

@section Header{
    <div>
        Header for only Get
    </div>
}